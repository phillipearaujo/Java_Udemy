package cursoJV.udemy.calc.visao;

import java.awt.Color;
import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;

import javax.swing.JPanel;

@SuppressWarnings("serial")
public class Teclado extends JPanel{
	
	private final Color COR_CINZA_ESCURO = new Color(68, 69, 68);
	private final Color COR_CINZA_CLARO = new Color(97, 100, 99);
	private final Color COR_LARANJA = new Color(242, 163, 60);
	
	public Teclado() {
		
		GridBagLayout layout = new GridBagLayout();
		GridBagConstraints c = new GridBagConstraints();
		
		setLayout(layout);
		
		//Linha 0
		adicionarBotao("AC", COR_CINZA_ESCURO, c, 0, 0);
		adicionarBotao("+/-", COR_CINZA_ESCURO, c, 1, 0);
		adicionarBotao("%", COR_CINZA_ESCURO, c, 2, 0);
		adicionarBotao("/", COR_LARANJA, c, 3, 0);
		//Linha 1
		adicionarBotao("AC", COR_CINZA_ESCURO, c, 0, 0);
		adicionarBotao("+/-", COR_CINZA_ESCURO, c, 1, 0);
		adicionarBotao("%", COR_CINZA_ESCURO, c, 2, 0);
		adicionarBotao("/", COR_LARANJA, c, 3, 0);
		//Linha 2
		adicionarBotao("AC", COR_CINZA_ESCURO, c, 0, 0);
		adicionarBotao("+/-", COR_CINZA_ESCURO, c, 1, 0);
		adicionarBotao("%", COR_CINZA_ESCURO, c, 2, 0);
		adicionarBotao("/", COR_LARANJA, c, 3, 0);
		//Linha 3
		adicionarBotao("AC", COR_CINZA_ESCURO, c, 0, 0);
		adicionarBotao("+/-", COR_CINZA_ESCURO, c, 1, 0);
		adicionarBotao("%", COR_CINZA_ESCURO, c, 2, 0);
		adicionarBotao("/", COR_LARANJA, c, 3, 0);
		//Linha 4
		adicionarBotao("AC", COR_CINZA_ESCURO, c, 0, 0);
		adicionarBotao("+/-", COR_CINZA_ESCURO, c, 1, 0);
		adicionarBotao("%", COR_CINZA_ESCURO, c, 2, 0);
		adicionarBotao("/", COR_LARANJA, c, 3, 0);
		
	}

	private void adicionarBotao(String texto, Color cor, 
					GridBagConstraints c, int x, int y) {
		c.gridx = x;
		c.gridy = y;
		Botao botao = new Botao(texto, cor);
		add(botao, c);
		
	}

}
